<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
    <p><%= link_to 'Back to Cocktails', root_path %></p>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-12 col-lg-7">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Quantity</th>
            <th scope="col">Ingredient</th>
            <th scope="col">Remove</th>
          </tr>
        </thead>
        <tbody>
          <% @doses.each do |dose| %>
            <tr>
              <td><%= dose.description %></td>
              <td><%= dose.ingredient.name %></td>
              <td><%= link_to 'X', dose_path(dose), method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-12 col-lg-5">
      <h3>Add Ingredients</h2>
      <%= simple_form_for [@cocktail, @new_dose] do |f| %>
        <%= f.input :description, label:"Quantity" %>
        <%= f.association :ingredient %>
        <%= f.button :submit, class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
